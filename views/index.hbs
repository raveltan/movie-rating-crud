{{> 'partials/navbar' }}

<section class="section">
    <div class="container">
        <h1 class="title">Movie List</h1>
        <nav class="level">
            <div class="level-left">
                <div class="level-item">
                    <p class="subtitle is-5"><Strong>{{totalFilm}}</Strong> Movie(s)</p>
                </div>
            </div>
            <div class="level-right">
                <div class="level-item">
                    <button onclick="showAddDialog()" class="button is-success">Add Movie</button>
                </div>
                <div class="modal">
                    <div class="modal-background"></div>
                    <div class="modal-card">
                        <header class="modal-card-head">
                            <p class="modal-card-title">Add new movie</p>
                            <button class="delete" aria-label="close" onclick="hideAddDialog()"></button>
                        </header>
                        <section class="modal-card-body">
                            <form action="/add-movie" method="post">
                                <div class="field">
                                    <label for="name" class="label">Movie Name</label>
                                    <div class="control">
                                        <input type="text" name="name" class="input" placeholder="记录美好生活" required />
                                    </div>
                                </div>
                                <div class="field is-grouped">
                                    <div class="control">
                                        <button type="submit" class="button is-success">Add Movie</button>
                                    </div>
                                    <div class="control">
                                        <button class="button is-light" onclick="hideAddDialog()">Cancel</button>
                                    </div>
                                </div>
                            </form>
                        </section>
                    </div>
                </div>
            </div>
        </nav>
        <table class="table is-hoverable is-fullwidth">
            <thead>
                <tr>
                    <th>Name</th>
                    <th class="is-narrow">Rating</th>
                    <th class="is-narrow">Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each film}}
                <tr>
                    <td>
                        {{name}}
                    </td>
                    <td>
                        {{rating}}
                    </td>
                    <td>
                        <div class="buttons">
                            <a href="review/{{id}}" class="button is-small is-success">
                                Review
                            </a>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>
<script>
    let modal = document.querySelector(".modal")
    const showAddDialog = () => {
        modal.classList.add("is-active")
    }
    const hideAddDialog = () => {
        modal.classList.remove("is-active")
    }
</script>